 Public class powerOfTwo{ 
 public static void main(String[] args) { 
 System.out.println("124 is power of two : "+powerOfTwoGeneral(124));
 System.out.println("123is power of two : "+powerOfTwoGeneral(123)); 
 } 
 public static boolean powerOfTwoGeneral(int n) {
 while(n%2==0) {
 n=n/2; }
 if(n==1) 
 { 
 return true;
 } 
 else
 { 
 return false;
 } 
 }